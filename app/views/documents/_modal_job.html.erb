<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="jobModalLabel">Ancien Travail</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= simple_form_for [@info, @job], remote: true do |f| %>
        <%= f.input :company, label: "Nom de l'employer" %>
        <%= f.input :work, label: "Intitulé du poste" %>
        <%= f.input :start_at, label: "Date de début du poste", as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_at, label: "Date de fin du poste", as: :string, required: false, input_html: {class: "datepicker"}%>
    </div>
      <div class="modal-footer d-flex justify-content-center">
        <%= f.submit "Ajoute ton travail", class: "btn-submit" %>
      </div>
    <% end %>
  </div>
</div>